#!/bin/sh                                                                                                                                                                                                                                                   
#!/bin/sh                                                                                                                                                   
#ip_address_list = /Users/DylanHR/desktop/dis-sys/ip-list                                                                                                   

array=( one two three )
for i in "${array[@]}"
do
echo $i
done
COUNT=0
for HOST in $(cat ip-list.txt)
do
    ssh -i dahayton-keypair dahayton@$HOST < stop_apache.sh 2>&1 | grep -v "Pseudo-terminal will not be allocated because stdin is not a terminal." &
    pids[$COUNT]=$!
    COUNT=$COUNT+1
done

for pid in ${pids[@]}
do 
    wait $pid
done
echo Servers Stopped